@require '~styles/variables'

.fade-collapse
	position: relative
	overflow: hidden

	&::before
		position: absolute
		display: none
		content: ''
		bottom: 0
		left: 0
		right: 0
		height: 25px
		background-image: linear-gradient( to bottom, rgba( $white, 0 ) 0%, rgba( $white, 1 ) 100% )
		pointer-events: none
		z-index: 1

	.fill-dark &
		&::before
			background-image: linear-gradient( to bottom, rgba( $gray-dark, 0 ) 0%, rgba( $gray-dark, 1 ) 100% )

	.fill-darker &
		&::before
			background-image: linear-gradient( to bottom, rgba( $gray-darker, 0 ) 0%, rgba( $gray-darker, 1 ) 100% )

	.fill-darkest &
		&::before
			background-image: linear-gradient( to bottom, rgba( $gray-darkest, 0 ) 0%, rgba( $gray-darkest, 1 ) 100% )

	&.is-collapsed
		&::before
			display: block
